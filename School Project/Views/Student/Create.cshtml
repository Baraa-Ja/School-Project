
<link href="~/css/Formdesign.css" rel="stylesheet" />

<div class="form-container">

    <h2>Create New Student</h2>

    <form id="studentForm" action="Create" method="post" enctype="multipart/form-data">
        <!-- studentid is hidden (auto-generated by DB) -->
        <input type="hidden" name="studentid" value="">

        <label for="StudentName">Student Name</label>
        <input type="text" id="StudentName" name="StudentName" minlength="5" maxlength="50" required>

        <label for="age">Age</label>
        <input type="number" id="age" name="age" min="5" max="30" required>

        <div class="checkbox-group">
            <input type="checkbox" id="Isactive" name="Isactive" checked value="true">
            <label for="Isactive">Is Active</label>
        </div>

        <div class="form-group">
            <label for="fileInput">Select file:</label>
            <input type="file" id="fileInput" name="StudentPhoto" required>
        </div>

@*         <div class="File-Upload">
            <input type="file" name="Student Photo"/>
            <label for="Photo">Student Photo</label>
        </div> *@

        <button type="submit">Submit</button>
    </form>
</div>