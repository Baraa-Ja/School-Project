<div class="form-container">

    <h2>Create New Teacher</h2>

    <form id="TeacherForm" action="Create" method="post">

        <label for="TeacherName">Teacher Name</label>
        <input type="text" id="TeacherName" name="TeacherName" minlength="2" maxlength="50" required>

        <label for="age">Age</label>
        <input type="number" id="Teacherage" name="Teacherage" min="18" max="80" required>

        <button type="submit">Submit</button>
    </form>
</div>